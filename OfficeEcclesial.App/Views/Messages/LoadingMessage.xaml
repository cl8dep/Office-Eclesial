<UserControl x:Class="OfficeEcclesial.App.Views.Messages.LoadingMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OfficeEcclesial.App.Views.Messages"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ProgressBar IsIndeterminate="True" Style="{StaticResource MaterialDesignCircularProgressBar}" Height="25" Width="25"/>
        <TextBlock Name="MessageTextBlock" Margin="0 6 0 0" FontSize="16" Grid.Row="1" TextWrapping="WrapWithOverflow" 
                   Text="Cargando..." TextAlignment="Center"/>
        </Grid>
</UserControl>
